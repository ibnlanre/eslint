{
  "compilerOptions": {
    "target": "es2023",
    "module": "es2015",
    "moduleDetection": "auto",
    "moduleResolution": "node",
    "lib": ["es2023", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
